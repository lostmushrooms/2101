	<script src="javascripts/bidScript.js"></script>
</head>
<body>
	<div class="container">
		<form id="bid_form" method="post" class="form-horizontal" role="form" action="placeBid">
			<input name="aid", id="aid", type="hidden", value="<%=aid%>">
			<input name="ctname", id="ctname", type="hidden", value="<%=ctname%>">
			<input name="ctstart", id="ctstart", type="hidden", value="<%=ctstart%>">
			<input name="ctend", id="ctend", type="hidden", value="<%=ctend%>">
			<div class="row justify-content-center">
				<h2> Place Your Bid </h2>
			</div>
			<div class="row justify-content-center">
				<div class='col-md-2'>
					<h4> start date   </h4>
				</div>
				<div class='col-md-5'>
					<div class="form-group">
						<div class='input-group date' id='datetimepicker6'>
							<input type='text' class="form-control" name='datetimepicker6'  id='datetimepicker6'>
							<span class="input-group-addon">
								<span class="glyphicon glyphicon-calendar"></span>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class='col-md-2'>
					<h4> end date   </h4>
				</div>
				<div class='col-md-5'>
					<div class="form-group">
						<div class='input-group date' id='datetimepicker7'>
							<input type='text' class="form-control" name='datetimepicker7'/>
							<span class="input-group-addon">
								<span class="glyphicon glyphicon-calendar"></span>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class='col-md-2'><h4>bidding Price</h4></div>
				<div class="col-md-5">
					<div class="form-group">
						<input type="number" step="0.01" min = "0" max = "10000" id="price" name="price" placeholder="price per hour" class="form-control col-sm-6">
					</div>
				</div>
			</div>
			<div class="row justify-content-center">
				<span class="help-block">Your bidding price should range from 0 to 10000 inclusive, with minimum step of 0.01</span>
			</div>
			<button type="submit" class="btn btn-primary btn-block">Submit</button>
		</form>
			<script>
		(function() {
			window.addEventListener('load', function() {
				var forms = [document.getElementById('bid_form')];
				var validation = Array.prototype.filter.call(forms, function(form) {
					form.addEventListener('submit', check, false);
				});
			}, false);
		})();
		$(function () {
			var today = new Date();
			$('#datetimepicker6').datetimepicker({
				minDate: today,
				format: 'YYYY-MM-DD'
			});
			$('#datetimepicker7').datetimepicker({
            		useCurrent: false, //Important! See issue #1075
            		format: 'YYYY-MM-DD'
            	});
			$("#datetimepicker6").on("dp.change", function (e) {
				$('#datetimepicker7').data("DateTimePicker").minDate(e.date);
			});
			$("#datetimepicker7").on("dp.change", function (e) {
				$('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
			});
		});
	</script> 
	</div>
</body>
</html>
